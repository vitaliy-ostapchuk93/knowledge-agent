{
  "name": "universal-knowledge-agent",
  "version": "0.1.0",
  "description": "Universal Knowledge Agent for cross-platform knowledge management integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build --target=node",
    "build:tsc": "tsc",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "start": "bun run dist/index.js",
    "demo": "bun run src/demo/demo.ts",
    "check": "bun run typecheck && bun run lint && bun run format:check && bun run test",
    "fix": "bun run lint:fix && bun run format",
    "clean": "rm -rf dist coverage .nyc_output"
  },
  "keywords": [
    "knowledge-management",
    "logseq",
    "obsidian",
    "notion",
    "ai",
    "content-discovery"
  ],
  "author": "Vitaliy Ostapchuk <vitaliy.ostapchuk93@gmail.com>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "@tensorflow/tfjs-node"
  ],
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "bun-types": "^1.2.20",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "openai": "^5.15.0",
    "ioredis": "^5.7.0",
    "node-cache": "^5.1.2",
    "youtube-sr": "^4.3.12",
    "snoowrap": "^1.23.0",
    "@octokit/rest": "^22.0.0"
  }
}
